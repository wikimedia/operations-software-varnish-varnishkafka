/var/log/varnishkafka.log {
  daily
  rotate 7
  create 0664 syslog adm
  missingok
  compress
  delaycompress
  postrotate
    reload rsyslog
  endscript
}

/var/cache/varnishkafka/varnishkafka.stats.json {
  weekly
  rotate 4
  create 0644 varnishlog root
  missingok
  compress
  delaycompress
  postrotate
    reload varnishkafka
  endscript
}
